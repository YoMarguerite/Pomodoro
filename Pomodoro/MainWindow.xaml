<Window x:Class="PomodoroProjet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PomodoroProjet"
        mc:Ignorable="d"
        Title="Pomodoro" Height="450" Width="520">
    <TabControl Name="tabcontrol" SelectedIndex="0" Background="#003366">
        <TabItem Header="Home" Style="{DynamicResource Tab}">
            <local:Home></local:Home>
        </TabItem>
        <TabItem Header="Timer" Style="{DynamicResource Tab}">
            <local:Timer x:Name="Timer"></local:Timer>
        </TabItem>
        <TabItem Header="Calendar" Style="{DynamicResource Tab}">
            <local:Calendar x:Name="Calendar"></local:Calendar>
        </TabItem>
    </TabControl>
</Window>
