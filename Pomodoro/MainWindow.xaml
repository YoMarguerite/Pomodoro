<Window x:Class="PomodoroProjet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PomodoroProjet"
        mc:Ignorable="d"
        Title="Pomodoro" Height="450" Width="520">
    <TabControl Name="tabcontrol" SelectedIndex="0" SelectionChanged="Tabcontrol_SelectionChanged" Background="#003366">
        <TabItem Header="Accueil" Style="{DynamicResource Tab}">
            <local:Accueil></local:Accueil>
        </TabItem>
        <TabItem Header="Timer" Style="{DynamicResource Tab}">
            <local:Timer x:Name="Timer"></local:Timer>
        </TabItem>
        <TabItem Header="Calendrier" Style="{DynamicResource Tab}">
            <local:Calendrier x:Name="Calendrier"></local:Calendrier>
        </TabItem>
        <TabItem Header="Test" Style="{DynamicResource Tab}">
            <local:Test x:Name="Test"></local:Test>
        </TabItem>
    </TabControl>
</Window>
