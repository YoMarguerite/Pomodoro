<Window x:Class="Pomodoro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pomodoro"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="520">
    <TabControl SelectedIndex="0" Background="#003366">
        <TabItem Header="Accueil">
            <local:Accueil></local:Accueil>
        </TabItem>
        <TabItem Header="Timer">
            <local:Timer></local:Timer>
        </TabItem>
        <TabItem Header="Calendrier">
            <local:Calendrier></local:Calendrier>
        </TabItem>
    </TabControl>
</Window>
