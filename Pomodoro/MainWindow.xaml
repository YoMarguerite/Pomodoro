<Window x:Class="Pomodoro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pomodoro"
        mc:Ignorable="d" Background="#003366"
        Title="MainWindow" Height="450" Width="300">
    <TabControl SelectedIndex="1" Background="#003366">
        <TabItem Header="Accueil" Style="{DynamicResource Tab}">
            <local:Accueil></local:Accueil>
        </TabItem>
        <TabItem Header="Timer"  Style="{DynamicResource Tab}">
            <local:Timer></local:Timer>
        </TabItem>
        <TabItem Header="Calendrier"  Style="{DynamicResource Tab}">
            <local:Calendrier></local:Calendrier>
        </TabItem>

    </TabControl>
</Window>
