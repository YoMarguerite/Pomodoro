<UserControl x:Class="Pomodoro.Accueil"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pomodoro"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox Name="tbx_libellePomodoro" HorizontalAlignment="Left" Height="23" Margin="40,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194"/>
        <Label Content="Nouveau pomodoro" HorizontalAlignment="Left" Margin="79,16,0,0" VerticalAlignment="Top"/>
        <Button Content="Ajouter" HorizontalAlignment="Left" Margin="95,99,0,0" VerticalAlignment="Top" Width="76" Click="AddItem"/>
        <ListBox Name="lbx_pomodoro" HorizontalAlignment="Left" Height="127" Margin="40,131,0,0" VerticalAlignment="Top" Width="194"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="95,263,0,0" VerticalAlignment="Top" Width="75" Click="DeleteItem"/>
        <ListBox Name="lbx_pomodoro_bdd" 
                 HorizontalAlignment="Left" Height="127" Margin="299,131,0,0" 
                 VerticalAlignment="Top" Width="194">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Viewbox>
                        <Label Content="{Binding Libelle}"></Label>
                    </Viewbox>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="test" HorizontalAlignment="Left" Margin="244,181,0,0" VerticalAlignment="Top" Width="39" Click="AddItemBdd"/>

    </Grid>
</UserControl>
